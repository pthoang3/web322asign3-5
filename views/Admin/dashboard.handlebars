<section class="airbnb-hero dashboard-hero">
  <div class="dashboard-content">
    <h3 class="title is-3">Hello {{user.firstname}} {{user.lastname}}, Welcome to Airbnb Admin page!</h1>
      <a href="/admin/add" class="button large is-primary">Add a new room</a>
  </div>
  <div class="box container has-text-centered">
    <h2 class="title is-2">Our Rooms</h2>
    <br>
    <div class="has-text-left columns is-multiline">
      {{#each rooms}}
      <div class="column is-one-third ">
        <div class="box card">
          <div class="card-image">
            <a href="/room/{{this._id}}">
              <figure class="image">
                <img src="/rooms/{{this.image}}" alt=" {{this.title}} image">
              </figure>
            </a>
            <div class="card-content">
              <div class="content">
                <h6 class="subtitle is-uppercase is-6 has-text-grey">{{this.city}}</h6>
                <h6 class="title is-6">{{this.title}}</h6>
                <p class="columns is-vcentered">
                  <span class="column is-8">
                    ${{this.price}} CAD/night
                  </span>
                  <a class="column is-4  button is-primary" style="padding:0.5rem" href="/admin/edit/{{this._id}}">
                    Edit
                  </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>