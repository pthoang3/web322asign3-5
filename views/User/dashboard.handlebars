<section class="airbnb-hero dashboard-hero">
  <div class="dashboard-content">
    <h3 class="title is-3">Hello {{user.firstname}} {{user.lastname}}, Welcome to Airbnb!</h1>
      <a href="/rooms" class="button large is-primary">Explore our rooms</a>
  </div>
  <div class="box container has-text-centered">
    <h2 class="title is-2">Booked rooms</h2>
    <br>
    <div class="has-text-left columns is-centered is-multiline">
      {{#each bookings}}
      <div class="column is-one-third ">
        <div class="box card">
          <div class="card-image">
            <a href="/room/{{this.roomID}}">
              <figure class="image">
                <img src="/rooms/{{this.image}}" alt=" {{this.title}} image">
              </figure>
            </a>
            <div class="card-content">
              <div class="content">
                <h6 class="subtitle is-uppercase is-6 has-text-grey">{{this.city}}</h6>
                <h6 class="title is-6">{{this.title}}</h6>
                <p class="columns is-vcentered">
                  <span class="column is-8">
                    ${{this.price}} CAD/night
                  </span>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{else}}
      <p>You have not booked any rooms</p>
      {{/each}}
    </div>
  </div>
</section>